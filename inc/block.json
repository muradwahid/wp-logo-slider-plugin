{
  "apiVersion": "1",
  "name": "b-blocks/logo-slider-block",
  "title": "Logo Slider",
  "description": "Logo sliders are often used on websites and blogs to showcase a company's clients, partners, or sponsors.",
  "category": "widgets",
  "keywords": ["slider", "logo", "carousel"],
  "textdomain": "b-blocks",
  "attributes": {
    "align": {
      "type": "string",
      "default": ""
    },
    "cId": {
      "type": "string",
      "default": ""
    },
    "content": {
      "type": "string",
      "default": ""
    },
    "sliderItems":{

    },
    "options":{
      "type":"object",
      "default":{
        "autoplay": true,
        "direction": "rightToLeft",
        "speed": 1,
        "delay": 1,
        "loop": true,
        "logoView": { "desktop": 4, "tablet": 3, "mobile": 2 },
        "space": { "desktop": 30, "tablet": 25, "mobile": 15 },
        "navigation": true,
        "pagination": true,
        "dynamicPagination": false
      }
    },
    "caption":{
      "type":"object",
      "default":{
        "isCaptionVisible": false,
        "hover": "visible",
        "color":{"text":"#fff","bg":"#000"}
      }
    },
    "sliderStyles":{
      "type":"object",
      "default":{
        "logo":{
          "hover":"none",
          "border":{
            "color":"#000",
            "width":"0px",
            "radius":0,
            "style":"none"
          }
        }
      }
    },
    "image": {
      "type": "array",
      "default": []
    },
    "loop": {
      "type": "boolean",
      "default": false
    },
    "slideDirection": {
      "type": "string",
      "default": "rightToLeft"
    },
    "imageReplace": {
      "type": "any"
    },
    "idx": {
      "type": "number"
    },
    "orderIdx": {
      "type": "number"
    }
  },
  "supports": {
    "align": ["wide", "full"],
    "html": false
  },
  "example": {
    "attributes": {
      "preview": true,
      "columns": {
        "desktop": 1,
        "tablet": 1,
        "mobile": 1
      }
    }
  },
  "editorScript": "file:./../dist/editor.js"
}
